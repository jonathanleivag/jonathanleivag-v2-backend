{
  "name": "jonathanleivag-v2-backend",
  "version": "1.0.0",
  "description": "The backend of JonathanLeivaG-V2 is a robust and secure solution designed to manage personal and professional information, as well as web and mobile development projects that are part of your digital portfolio.",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --transpile-only --ignore-watch node_modules src/index.ts",
    "start": "node public/index.js",
    "build": "tsc",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix"
  },
  "author": "Jonathanleivag",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "ts-node-dev": "2.0.0",
    "ts-standard": "12.0.2",
    "typescript": "5.7.3"
  },
  "dependencies": {
    "@octokit/rest": "21.1.0",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "mongodb": "6.12.0",
    "resend": "4.1.1"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "public/*"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ]
  }
}
